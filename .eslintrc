{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard",
    // react
    "plugin:react/recommended",
    // jsx based on react plugin
    "standard-jsx",
    // flow type
    "plugin:flowtype/recommended",
    // turn off all eslint format related rules, and use prettier to format
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "env": {
    "es6": true,
    "jasmine": true
  },

  "plugins": [
    "flowtype",
    "react",
    "react-native",
    "standard",
    "prettier"
  ],

  // Map from global var to bool specifying if it can be redefined
  "globals": {
    "__DEV__": true,
    "__dirname": false,
    "__fbBatchedBridgeConfig": false,
    "alert": false,
    "cancelAnimationFrame": false,
    "cancelIdleCallback": false,
    "clearImmediate": true,
    "clearInterval": false,
    "clearTimeout": false,
    "console": false,
    "document": false,
    "escape": false,
    "Event": false,
    "EventTarget": false,
    "exports": false,
    "fetch": false,
    "FormData": false,
    "global": false,
    "jest": false,
    "Map": true,
    "module": false,
    "navigator": false,
    "process": false,
    "Promise": true,
    "requestAnimationFrame": true,
    "requestIdleCallback": true,
    "require": false,
    "Set": true,
    "setImmediate": true,
    "setInterval": false,
    "setTimeout": false,
    "window": false,
    "XMLHttpRequest": false,
    "pit": false,
    "Blob": false,
    "atob": false
  },

  "rules": {
    // standard customized
    "camelcase": "off",
    "one-var": "off",
    "prefer-promise-reject-errors": "off",

    // react plugin
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off",
    "react/jsx-boolean-value": "off",
    "react/no-deprecated": 1,

    // react-native plugin
    "react-native/no-unused-styles": 2,
    "react-native/no-inline-styles": 2,

    // eslint:recommended
    "no-useless-escape": 1,

    // prettier plugin
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": false,
      "jsxBracketSameLine": true
    }]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
